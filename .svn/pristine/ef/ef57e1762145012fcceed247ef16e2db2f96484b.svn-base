
li.cms_main_menu_item {
	display: block;
	position: relative;
	border: 1px solid #a0a0a0;
}

div.cms_main_menu_first,div.cms_main_menu_second {
	display: block;
	height: 24px;
	position: relative;
	float: none;
}

div.cms_main_menu_first {
	margin-top: 30px;
	margin-bottom: 4px;
}

