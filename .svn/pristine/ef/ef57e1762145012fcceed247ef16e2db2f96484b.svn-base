/* old styles */

.menu_items_list>li {
	height: 96px;
	box-sizing: border-box;
	padding: 5px 9px 2px 9px ;
	margin-bottom: 10px;
}

.admin_main_menu_item_toolbar {
	clear: both;
	height: 22px;
	border-bottom: 1px solid #a0a0a0;
	margin: 0px -6px 12px -6px;
	padding: 0px 0px 0px 0px;
	width: 932px;
}

.admin_main_menu_item_toolbar div {
	float: right;
}

.admin_main_menu_item_toolbar a {
	float: right;
	color: black;
	display: block;
}

.admin_main_menu_item_delete {
	box-sizing: border-box;
	display: block;
	border: 1px solid #a0a0a0;
	border-radius: 3px;
	height: 18px;
	line-height: 15px;
	font-size: 13px;
	float: right;
	padding: 1px 8px 0px 8px;
	cursor: pointer;
	text-align: center;
	transform: translateZ(0);
	-webkit-transform: translateZ(0);
	margin-left: 5px;
}

.admin_main_menu_item_submenu {
	box-sizing: border-box;
	display: block;
	border: 1px solid #a0a0a0;
	border-radius: 3px;
	height: 18px;
	line-height: 15px;
	font-size: 13px;
	float: right;
	padding: 1px 8px 0px 8px;
	cursor: pointer;
	text-align: center;
	transform: translateZ(0);
	-webkit-transform: translateZ(0);
	text-decoration: none;
	color: black;
}

.menu_item_template {
	display: none;
}